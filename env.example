# Environment variables for Spring Angular Entra PoC
# Copy this file to .env and update the values

# Microsoft Entra ID Configuration
MSAL_CLIENT_ID=your-client-id-here
MSAL_TENANT_ID=your-tenant-id-here
JWT_ISSUER_URI=https://login.microsoftonline.com/your-tenant-id-here/v2.0

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:4200,https://your-domain.com

# Database Configuration (for production with PostgreSQL)
SPRING_DATASOURCE_URL=jdbc:postgresql://postgres:5432/spring_angular_entra
SPRING_DATASOURCE_USERNAME=postgres
SPRING_DATASOURCE_PASSWORD=postgres

# API Configuration
API_BASE_URL=http://localhost:8080

# Security Configuration
JWT_SECRET=your-jwt-secret-here

# Logging Configuration
LOG_LEVEL=INFO

# Development vs Production
NODE_ENV=development
SPRING_PROFILES_ACTIVE=docker
